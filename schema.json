{
	"type": "object",
	"properties": {
		"paths": {
			"type": "array",
			"title": "Monitored paths",
			"default": [{
                "enabled": true,
                "message": "${vessel}: ${path} is ${test} ${threshold} (${value})",
                "thresholds": [{ "notificationtype": "alert" }]
            }],
			"items": {
				"type": "object",
				"required": ["path"],
				"properties": {
					"enabled": {
						"title": "Enabled",
						"type": "boolean",
						"default": true
					},
					"path": {
						"title": "Signal K path",
                        "description": "Path specifying the value which may trigger notification",
						"type": "string",
						"default": ""
					},
					"message": {
						"title": "Notification message",
						"description": "Text of notification. Use ${path}, ${test}, ${threshold}, ${value} or ${vessel} to interpolate values.",
						"type": "string",
                        "default": ""
					},
                    "thresholds": {
                        "title": "Thresholds",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
					            "lowthreshold": {
						            "title": "Low",
						            "type": "number"
					            },						
					            "highthreshold": {
						            "title": "High",
						            "type": "number"
					            },						
					            "notificationtype": {
						            "type": "string",
						            "title": "Notification state",
						            "default": "alert",
						            "enum": ["normal", "alert", "warn", "alarm", "emergency"],
						            "enumNames": ["normal", "alert", "warning", "alarm", "emergency"]
					            },
                                "notificationoptions": {
                                    "title": "Options",
                                    "type": "array",
                                    "default": [],
                                    "items": {
                                        "type": "string",
                                        "enum": [ "visual", "sound", "inrange" ],
                                        "enumNames": [ "visual", "sound", "normal" ]
                                    },
                                    "uniqueItems": true
                                }
                            }
                        }
                    }
                }
			}
		}
	}
}
