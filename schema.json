{
	"type": "object",
	"properties": {
		"paths": {
			"type": "array",
			"title": "Monitored paths",
			"default": [{
                "enabled": true,
                "message": "${vessel}: ${key} is ${test} ${threshold}",
                "thresholds": [{ "notificationtype": "alert" }]
            }],
			"items": {
				"type": "object",
				"required": ["key"],
				"properties": {
					"enabled": {
						"title": "Enabled",
						"type": "boolean",
						"default": true
					},
					"key": {
						"title": "Signal K path to monitor",
                        "description": "Path referencing the value to monitor.",
						"type": "string",
						"default": ""
					},
					"message": {
						"title": "Notification message",
						"description": "Text of notification. Use ${vessel}, ${test}, ${threshold} or ${value} to interpolate strings.",
						"type": "string",
                        "default": ""
					},
                    "thresholds": {
                        "title": "Thresholds",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
					            "lowthreshold": {
						            "title": "Low",
						            "type": "number"
					            },						
					            "highthreshold": {
						            "title": "High",
						            "type": "number"
					            },						
					            "notificationtype": {
						            "type": "string",
						            "title": "Alarm",
						            "default": "alert",
						            "enum": ["normal", "alert", "warn", "alarm", "emergency"],
						            "enumNames": ["normal", "alert", "warning", "alarm", "emergency"]
					            },
                                "notificationoptions": {
                                    "title": "Options",
                                    "type": "array",
                                    "default": [],
                                    "items": {
                                        "type": "string",
                                        "enum": [ "visual", "sound", "inrange" ],
                                        "enumNames": [ "visual", "sound", "normal" ]
                                    },
                                    "uniqueItems": true
                                }
                            }
                        }
                    }
                }
			}
		}
	}
}
